<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sh="clr-namespace:Sharpnado.Shades;assembly=Sharpnado.Shadows"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource MainColor}"
             mc:Ignorable="d"
             x:Class="MobileApp.Views.HomeView">
    <ContentPage.Content>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <sh:Shadows Style="{StaticResource inputShadow}" CornerRadius="40">
                    <Frame  BorderColor="White" HeightRequest="80" WidthRequest="80" Margin="0"  Padding="0"
                           CornerRadius="40" Style="{StaticResource entryFrameStyle}" BackgroundColor="{StaticResource MainColor}">
                        <Image Source="{Binding Photo}"  />
                    </Frame>
                </sh:Shadows>
                <StackLayout Grid.Column="1" Margin="0,10">
                    <Label VerticalOptions="Center" Text="Hello," Margin="0"/>
                    <Label VerticalOptions="Center" FontSize="Medium" Text="{Binding ProfileName}"/>
                </StackLayout>
                <StackLayout Grid.Column="2" WidthRequest="100">
                    <Button Command="{Binding NotifCommand}" Text="&#xf0f3;" FontFamily="{StaticResource FontAwesomeSolid}"  FontSize="Large"
                           Padding="0" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"></Button>
                </StackLayout>
            </Grid>
            <sh:Shadows Grid.Row="1" Style="{StaticResource card}">
                <Frame CornerRadius="20"  Style="{StaticResource entryFrameStyle}">
                    <StackLayout Margin="10"  >
                        <Label Text="POIN ANDA" Margin="20" FontSize="Large" FontAttributes="Bold"></Label>
                        <Grid>
                            <microcharts:ChartView x:Name="chartView" VerticalOptions="StartAndExpand" Margin="20" 
                                                    HeightRequest="250"/>
                            <Label Text="110" FontSize="Large" FontAttributes="Bold" TextColor="#55a3f7"
                                   VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Label>
                        </Grid>
                    </StackLayout>
                 </Frame>
            </sh:Shadows>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>